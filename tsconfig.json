{
  // https://v3.nuxtjs.org/concepts/typescript
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client",
      "node",
    ],
    "esModuleInterop": true,
    "diagnostics": false,
    "outDir": "./dist",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "src/components/dropdown",
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node"
  }
}
